<div class="col-12 col-md-6 col-lg-4">
    <% latestnews.forEach(currentNews => { %>
        <% let now = new Date(currentNews.article_postdate); %>
        
        <div class="single-blog-post small-featured-post d-flex">
                <div class="post-thumb">
                    <a href="/single-post/<%= currentNews.article_id%>"><img src="/img/bg-img/<%= currentNews.img_src%>" alt=""></a>
                </div>
                <div class="post-data">
                    <a href="/single-post/<%= currentNews.article_id%>" class="post-catagory"><%= currentNews.categoryName %></a>
                    <div class="post-meta">
                        <a href="/single-post/<%= currentNews.article_id%>" class="post-title">
                            <h6><%= currentNews.article_title %></h6>
                        </a>
                        <!-- <p class="post-date"><span>7:00 AM</span> | <span>April 14</span></p> -->
                        <p class="post-date"><span><%= dateAndTime.format(now, 'h:mm A | MMMM DD') %></span></p>
                    </div>
                </div>
            </div>
    <%}); %>
</div>